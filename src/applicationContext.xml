<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="connectionMaker" class="user.dao.DConnectionMaker"></bean>

    <bean id="userDao" class="user.dao.UserDao">
        <property name="connectionMaker" ref="connectionMaker"></property>
    </bean>

    <bean id="countingConnectionMaker" class="user.dao.CountingConnectionMaker">
        <constructor-arg name="realConnectionMarker" ref="connectionMaker"></constructor-arg>
    </bean>

    <bean id="countingUserDao" class="user.dao.UserDao">
        <property name="connectionMaker" ref="countingConnectionMaker"></property>
    </bean>

</beans>